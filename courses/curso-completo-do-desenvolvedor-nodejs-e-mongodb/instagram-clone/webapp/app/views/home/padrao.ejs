<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">

	<title>Instagram Clone - WEB</title>

	<!-- JQuery -->
	<script src="http://code.jquery.com/jquery-3.1.1.min.js"></script>

	<!-- bootstrap - link cdn -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

	<!-- incluindo css -->
	<link href="css/style.css" rel="stylesheet">

	<script>
		$(document).ready(function () {

			$('#btn_incluir').click(function () {
				$('#container_timeline').hide();
				$('#container_form').show();
			});

			$('#btn-cancelar-publicacao').click(function () {
				$('#container_timeline').show();
				$('#container_form').hide();
				return false;
			});

			$('#btn-publicar').click(function () {
				var xhr = new XMLHttpRequest();
				var formData = new FormData();

				var arquivo = document.getElementById('arquivo').files[0];
				var titulo = document.getElementById('titulo').value

				formData.append('arquivo', arquivo);
				formData.append('titulo', titulo);

				xhr.onreadystatechange = function () {
					if (xhr.readyState == 4) {
						var resposta = xhr.responseText;
						document.getElementById('mensagem').innerHTML = resposta;
					}
				};

				xhr.open('POST', 'http://localhost:8080/api');
				xhr.send(formData);
			});

			(function carregarPostagens() {
				var xhr = new XMLHttpRequest();

				xhr.open('GET', 'http://localhost:8080/api');

				xhr.onload = function () {
					if (xhr.status = 200) {
						var postagens = JSON.parse(xhr.responseText);

						postagens.forEach(function (elem) {
							var postagem = '<div class="publicacao">' +
								'<span class="titulo">' +
								elem.titulo +
								'</span>' +
								'<img src="http://localhost:8080/imagens/' + elem.url + '" />' +
								'<div class="comentarios" id="comentarios-' + elem._id + '" ></div>' +
								'<div class="comentar">' +
								'<input type="text" class="form-control input_comentario" id="' + elem._id + '" placeholder="Adicione o comentario aqui."/>' +
								'<button class="btn btn-default btn_postagem" value="' + elem._id + '" type="button">Comentar</button>'
							'</div>'
							'</div>';
							$('#container_timeline').append(postagem);

							if (elem.comentarios) {
								var comentarios = '';

								elem.comentarios.forEach(function (comentario) {
									comentarios += '<div class="txt_comentario">' +
										'<button type="button" value="' + comentario.idComentario + '" class="btn btn-default btn_remover_postagem">X</button>' +
										comentario.comentario +
										'</div>';
								});

								$('#comentarios-' + elem._id).append(comentarios);
							}
						});

						$('.btn_postagem').click(function () {
							var id = this.value;
							var comentario = $('#' + id).val();

							var xhr = new XMLHttpRequest();
							xhr.open('PUT', 'http://localhost:8080/api/' + id);
							xhr.setRequestHeader('Content-Type', 'application/json');

							xhr.onload = function () {
								if (xhr.status === 200) {
									window.location.href = 'home';
								}
							};

							xhr.send(JSON.stringify({ comentario: comentario }));
						});

						$('.btn_remover_postagem').click(function () {
							var idComentario = this.value;

							var xhr = new XMLHttpRequest();
							xhr.open('DELETE', 'http://localhost:8080/api/' + idComentario);

							xhr.onload = function () {
								if (xhr.status === 200) {
									window.location.href = 'home';
								}
							};

							xhr.send();
						});
					}
				};

				xhr.send();
			})();

		});
	</script>

</head>

<body>

	<nav class="navbar navbar-default">
		<div class="container">
			<div class="col-md-12">
				<div class="container-fluid">
					<img alt="Instagram Clone - VersÃ£o WEB" src="images/logo2.jpg" class="logo2">
					<img alt="Incluir" src="images/incluir.jpg" class="pull-right btn-incluir" id="btn_incluir">
				</div>
			</div>
		</div>
	</nav>

	<div class="container">
		<div class="col-md-2"></div>
		<div class="col-md-8" id="container_timeline"></div>

	</div>


	<div class="container" style="display:none" id="container_form">
		<div class="panel panel-default">

			<div class="panel-heading">
				<h4>Publicar uma foto</h4>
			</div>

			<div class="panel-body">
				<div class="form-group">
					<input type="file" name="arquivo" id="arquivo" class="form-control">
				</div>

				<div class="form-group">
					<input type="text" name="titulo" id="titulo" class="form-control" placeholder="Titulo" autocomplete="off">
				</div>

				<div class="form-group">
					<button class="btn btn-success" id="btn-publicar">Publicar</button>
					<button class="btn btn-danger" id="btn-cancelar-publicacao">Cancelar</button>
				</div>
				<div id="mensagem"></div>
			</div>
		</div>
</body>

</html>